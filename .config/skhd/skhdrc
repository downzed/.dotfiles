# change window focus 
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# swap window
# shift + alt - j : yabai -m window --swap south
# shift + alt - k : yabai -m window --swap north
# shift + alt - h : yabai -m window --swap west
# shift + alt - l : yabai -m window --swap east

# swap & split window
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - h : yabai -m window --warp west
shift + alt - l : yabai -m window --warp east

# move window to next/prev space
shift + alt - n : yabai -m window --space next
shift + alt - p : yabai -m window --space prev

# move window to specified space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4

# resize window
shift + alt - left : yabai -m window --resize left:-25:0
shift + alt - right : yabai -m window --resize right:25:0
shift + alt - up : yabai -m window --resize top:0:-25
shift + alt - down : yabai -m window --resize bottom:0:25

# rotate layout
shift + alt - r : yabai -m space --rotate 270
# flip y-axis
shift + alt - y : yabai -m space --mirror y-axis
# flip x-axis
shift + alt - x : yabai -m space --mirror x-axis
# toggle float
shift + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# zoom / fullscreen mode
shift + alt - z : yabai -m window --toggle zoom-fullscreen
# balance (refresh resize)
shift + alt - b : yabai -m space --balance


# start/stop/reload yabai
ctrl + shift - r : yabai --restart-service
ctrl + shift - s : yabai --start-service
ctrl + shift - t : yabai --stop-service


